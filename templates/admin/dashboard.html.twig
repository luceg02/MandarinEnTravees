{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-dashboard-wrapper">
    <div class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h3 mb-0">Dashboard Administrateur</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Statistiques -->
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="d-flex align-items-center">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">üë•</span>
                        <strong>Utilisateurs</strong>
                    </div>
                    <div class="stats-number">{{ totalUsers|number_format(0, ',', ' ') }}</div>
                </div>
                
                <div class="stats-card">
                    <div class="d-flex align-items-center">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">üì∞</span>
                        <strong>Journalistes en attente</strong>
                    </div>
                    <div class="stats-number">{{ journalistesEnAttente|length }}</div>
                </div>
                
                <div class="stats-card">
                    <div class="d-flex align-items-center">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">‚ö†Ô∏è</span>
                        <strong>Signalements</strong>
                    </div>
                    <div class="stats-number">{{ signalements }}</div>
                </div>
                
                <div class="stats-card">
                    <div class="d-flex align-items-center">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">‚úÖ</span>
                        <strong>Demandes publi√©es</strong>
                    </div>
                    <div class="stats-number">{{ factChecksPublies }}</div>
                </div>
            </div>
            
            <!-- Contenu principal -->
            <div class="col-md-9">
                <div class="row">
                    <!-- Validation journalistes -->
                    <div class="col-md-6">
                        <div class="content-card">
                            <div class="card-header-custom">
                                <div class="d-flex align-items-center">
                                    <span style="font-size: 1.2rem; margin-right: 0.5rem;">üéì</span>
                                    <strong>Validation journalistes</strong>
                                </div>
                                <a href="{{ path('admin_journalistes_attente') }}" class="btn-voir-tout">Voir tout</a>
                            </div>
                            
                            {% for journaliste in journalistesEnAttente %}
                                <div class="user-item">
                                    <div class="user-avatar">
                                        üë§
                                    </div>
                                    <div class="user-content">
                                        <div class="user-name">{{ journaliste.prenom }} {{ journaliste.nom }}</div>
                                        <div class="user-details" title="{{ journaliste.email }} ‚Ä¢ Carte n¬∞{{ journaliste.numeroCartePresse ?: 'N/A' }}">
                                            {{ journaliste.email }} ‚Ä¢ 
                                            Carte n¬∞{% if journaliste.numeroCartePresse %}
                                                {% if journaliste.numeroCartePresse|length > 8 %}
                                                    {{ journaliste.numeroCartePresse|slice(0, 8) }}...
                                                {% else %}
                                                    {{ journaliste.numeroCartePresse }}
                                                {% endif %}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="user-actions">
                                        <a href="{{ path('admin_valider_journaliste', {id: journaliste.id}) }}" 
                                           class="btn-valider" 
                                           onclick="return confirm('Valider ce journaliste ?')">
                                            ‚úì Valider
                                        </a>
                                        <a href="{{ path('admin_rejeter_journaliste', {id: journaliste.id}) }}" 
                                           class="btn-rejeter"
                                           onclick="return confirm('Rejeter ce journaliste ?')">
                                            ‚úó Rejeter
                                        </a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-center text-muted py-3">
                                    Aucun journaliste en attente
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    
                    <!-- Signalements r√©cents -->
                    <div class="col-md-6">
                        <div class="content-card">
                            <div class="card-header-custom">
                                <div class="d-flex align-items-center">
                                    <span style="font-size: 1.2rem; margin-right: 0.5rem;">üö®</span>
                                    <strong>Signalements r√©cents</strong>
                                </div>
                                <a href="{{ path('admin_reports') }}" class="btn-moderation">Mod√©ration</a>
                            </div>
                            
                            {% for signalement in signalementsRecents %}
                                <div class="signalement-item">
                                    <div class="signalement-number priority-{{ loop.index <= 2 ? 'high' : (loop.index <= 4 ? 'medium' : 'low') }}">
                                        {{ loop.index }}
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">
                                            {% if signalement.typeContenu == 'demande' %}
                                                Demande de {{ signalement.auteurContenu.prenom }} {{ signalement.auteurContenu.nom }}.
                                            {% else %}
                                                R√©ponse de {{ signalement.auteurContenu.prenom }} {{ signalement.auteurContenu.nom }}. 
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div>
                                        {% set tagClass = 'tag-' ~ signalement.raison %}
                                        {% set tagText = signalement.raison == 'inapproprie' ? 'Inappropri√©' : 
                                                        (signalement.raison == 'spam' ? 'Spam' : 
                                                        (signalement.raison == 'incorrecte' ? 'Fake news' : 
                                                        (signalement.raison == 'harcelement' ? 'Harc√®lement' : 'Autre'))) %}
                                        <span class="signalement-tag {{ tagClass }}">{{ tagText }}</span>
                                    </div>
                                </div>
                            {% else %}
                                <div class="text-center text-muted py-3">
                                    Aucun signalement r√©cent
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                
                <!-- Activit√© r√©cente -->
                <div class="row mt-3">
                    <div class="col-md-12">
                        <div class="content-card">
                            <div class="card-header-custom">
                                <div class="d-flex align-items-center">
                                    <span style="font-size: 1.2rem; margin-right: 0.5rem;">üìä</span>
                                    <strong>Activit√© r√©cente</strong>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    {% for activite in activiteRecente[:3] %}
                                        <div class="activity-item">
                                            <div class="activity-icon {{ activite.type == 'fact_check' ? 'success' : (activite.type == 'journaliste' ? 'info' : (activite.type == 'user' ? 'info' : 'warning')) }}">
                                                {% if activite.type == 'fact_check' %}‚úì
                                                {% elseif activite.type == 'journaliste' %}üì∞
                                                {% elseif activite.type == 'user' %}üë§
                                                {% else %}‚ö†Ô∏è{% endif %}
                                            </div>
                                            <div class="flex-grow-1">
                                                <div>
                                                    {% if activite.type == 'user' %}
                                                        Nouveau utilisateur inscrit
                                                    {% elseif activite.type == 'demande' %}
                                                        Nouvelle demande re√ßue
                                                    {% else %}
                                                        {{ activite.message }}
                                                    {% endif %}
                                                </div>
                                                <div class="text-muted small">Il y a {{ activite.temps }}</div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="col-md-6">
                                    {% for activite in activiteRecente[3:] %}
                                        <div class="activity-item">
                                            <div class="activity-icon {{ activite.type == 'fact_check' ? 'success' : (activite.type == 'journaliste' ? 'info' : (activite.type == 'user' ? 'info' : 'warning')) }}">
                                                {% if activite.type == 'fact_check' %}‚úì
                                                {% elseif activite.type == 'journaliste' %}üì∞
                                                {% elseif activite.type == 'user' %}üë§
                                                {% else %}‚ö†Ô∏è{% endif %}
                                            </div>
                                            <div class="flex-grow-1">
                                                <div>
                                                    {% if activite.type == 'user' %}
                                                        Nouveau utilisateur inscrit
                                                    {% elseif activite.type == 'demande' %}
                                                        Nouvelle demande re√ßue
                                                    {% else %}
                                                        {{ activite.message }}
                                                    {% endif %}
                                                </div>
                                                <div class="text-muted small">Il y a {{ activite.temps }}</div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
{% endblock %}