{% extends 'base.html.twig' %}
{% block title %}Connexion - Le Mandarin en Travées{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/registration.css') }}">
{% endblock %}

{% block body %}
<div class="registration-container">
    <div class="left-panel">
        <div class="logo">
            <img src="{{ asset('images/logoheader_mandarin.png.jpg') }}" alt="Le Mandarin en Travées" class="logo-icon-image" style="height: 300px; width: auto;">
        </div>
        
        <h1>Rejoignez la communauté du fact-checking collaboratif et participez à la lutte contre la désinformation.</h1>
        
        <div class="features">
            <div class="feature-item">
                <span class="feature-icon">✅</span>
                <span>Vérifiez l'information ensemble</span>
            </div>
            <div class="feature-item">
                <span class="feature-icon">✅</span>
                <span>Gagnez en réputation</span>
            </div>
            <div class="feature-item">
                <span class="feature-icon">✅</span>
                <span>Sources vérifiées par des journalistes</span>
            </div>
            <div class="feature-item">
                <span class="feature-icon">✅</span>
                <span>Communauté active et bienveillante</span>
            </div>
        </div>
    </div>
    
    <div class="right-panel">
        <div class="form-tabs">
            <span class="form-tab active">Connexion</span>
            <a href="{{ path('app_register') }}" class="form-tab">Inscription</a>
        </div>
        
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="alert alert-info">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}
        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Email ou nom d'utilisateur</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>
            <button class="btn-primary" type="submit">
                Se connecter
            </button>
            
            <div style="text-align: center; margin-top: 20px;">
                <a href="#" style="color: #667eea; text-decoration: none;">Mot de passe oublié ?</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/registration.js') }}"></script>
{% endblock %}