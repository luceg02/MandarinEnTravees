                                                    </div>
                                                    <div class="other-actions">
                                                {% if app.user and app.user != reponse.auteur %}
    <a href="{{ path('report_contenu', {type: 'reponse', id: reponse.id}) }}" 
       class="btn btn-sm btn-outline-warning">üö© Signaler</a>
{% endif %}
                                            </div>
                                                </div>
                                            {% else %}
