{% extends 'base.html.twig' %}

{% block title %}Recherche : {{ query }} - Le Mandarin en Travées{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/homepage.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Section héro pour la recherche -->
    <section class="hero-section">
        <div class="container">
            <h1 class="hero-title">Résultats de recherche</h1>
            <p class="hero-subtitle">
                {% if total_demandes > 0 %}
                    {{ total_demandes }} résultat{{ total_demandes > 1 ? 's' : '' }} pour "{{ query }}"
                {% else %}
                    Aucun résultat trouvé pour "{{ query }}"
                {% endif %}
            </p>
            <a href="{{ path('app_demande_new') }}" class="cta-button">Soumettre une vérification</a>
        </div>
    </section>

    <!-- Contenu principal -->
    <main class="main-content">
        <div class="container">
            <div class="row">
                <!-- Colonne gauche - Résultats -->
                <div class="col-lg-8">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="section-title">Recherche : "{{ query }}"</h2>
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à l'accueil
                        </a>
                    </div>
                    
                    <!-- Nouvelle recherche -->
                    <div class="mb-4">
                        <form action="{{ path('app_recherche') }}" method="GET" class="d-flex">
                            <input type="text" name="q" placeholder="Rechercher..." class="form-control me-2" 
                                   value="{{ query }}" style="border-radius: 25px;">
                            <button type="submit" class="btn btn-primary" style="border-radius: 25px;">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                    
                    <!-- Section des résultats -->
                    <section class="fact-checks-section">
                        <p class="text-muted">
                            {% if total_demandes > 0 %}
                                {{ total_demandes }} résultat{{ total_demandes > 1 ? 's' : '' }} trouvé{{ total_demandes > 1 ? 's' : '' }} pour "{{ query }}"
                                {% if total_pages > 1 %}
                                    - Page {{ page_courante }} sur {{ total_pages }}
                                {% endif %}
                            {% else %}
                                Aucun résultat trouvé pour "{{ query }}"
                            {% endif %}
                        </p>
                        
                        {% if demandes|length > 0 %}
                            <!-- Affichage des demandes - Une par ligne -->
                            <div class="row">
                                {% for demande in demandes %}
                                    <div class="col-12">
                                        <div class="fact-check-card">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <div class="d-flex gap-2 align-items-center">
                                                    {% if demande.statut == 'en_attente' %}
                                                        <span class="status-badge bg-info">En attente</span>
                                                    {% elseif demande.statut == 'en_cours' %}
                                                        <span class="status-badge bg-warning text-dark">En cours</span>
                                                    {% elseif demande.statut == 'verifie' %}
                                                        <span class="status-badge bg-success">Vérifié</span>
                                                    {% elseif demande.statut == 'faux' %}
                                                        <span class="status-badge bg-danger">Faux</span>
                                                    {% elseif demande.statut == 'partiellement_vrai' %}
                                                        <span class="status-badge bg-warning">Partiellement vrai</span>
                                                    {% else %}
                                                        <span class="status-badge bg-secondary">{{ demande.statut|default('Non défini') }}</span>
                                                    {% endif %}
                                                    {% if demande.categorie %}
                                                        <span class="badge bg-secondary">{{ demande.categorie }}</span>
                                                    {% endif %}
                                                </div>
                                                <small class="text-muted card-meta">
                                                    {% set diff = date().diff(demande.dateCreation) %}
                                                    {% if diff.days > 0 %}
                                                        Il y a {{ diff.days }} jour{{ diff.days > 1 ? 's' : '' }}
                                                    {% elseif diff.h > 0 %}
                                                        Il y a {{ diff.h }}h
                                                    {% elseif diff.i > 0 %}
                                                        Il y a {{ diff.i }} min
                                                    {% else %}
                                                        À l'instant
                                                    {% endif %}
                                                </small>
                                            </div>
                                            
                                            <h5 class="card-title fw-bold mb-3">
                                                {{ demande.titre }}
                                            </h5>
                                            
                                            <p class="card-excerpt mb-3">
                                                {{ demande.description|length > 200 ? demande.description|slice(0, 200) ~ '...' : demande.description }}
                                            </p>
                                            
                                            {% if demande.liensSources %}
                                                <div class="mb-2">
                                                    <small class="text-muted">
                                                        <i class="fas fa-link me-1"></i>
                                                        Sources fournies
                                                    </small>
                                                </div>
                                            {% endif %}
                                            
                                            <a href="{{ path('app_demande_detail', {id: demande.id}) }}" class="btn btn-outline-primary btn-sm mt-2">
                                                <i class="fas fa-eye me-1"></i>
                                                Voir les détails
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            <!-- Pagination -->
                            {% if total_pages > 1 %}
                                <nav aria-label="Navigation des résultats" class="mt-4">
                                    <ul class="pagination justify-content-center">
                                        <!-- Page précédente -->
                                        {% if page_courante > 1 %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_recherche', {q: query, page: page_courante - 1}) }}">
                                                    <i class="fas fa-chevron-left"></i>
                                                    Précédent
                                                </a>
                                            </li>
                                        {% else %}
                                            <li class="page-item disabled">
                                                <span class="page-link">
                                                    <i class="fas fa-chevron-left"></i>
                                                    Précédent
                                                </span>
                                            </li>
                                        {% endif %}

                                        <!-- Numéros de pages -->
                                        {% set start_page = max(1, page_courante - 2) %}
                                        {% set end_page = min(total_pages, page_courante + 2) %}
                                        
                                        {% if start_page > 1 %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_recherche', {q: query, page: 1}) }}">1</a>
                                            </li>
                                            {% if start_page > 2 %}
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            {% endif %}
                                        {% endif %}

                                        {% for page_num in start_page..end_page %}
                                            {% if page_num == page_courante %}
                                                <li class="page-item active">
                                                    <span class="page-link">{{ page_num }}</span>
                                                </li>
                                            {% else %}
                                                <li class="page-item">
                                                    <a class="page-link" href="{{ path('app_recherche', {q: query, page: page_num}) }}">{{ page_num }}</a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}

                                        {% if end_page < total_pages %}
                                            {% if end_page < total_pages - 1 %}
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            {% endif %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_recherche', {q: query, page: total_pages}) }}">{{ total_pages }}</a>
                                            </li>
                                        {% endif %}

                                        <!-- Page suivante -->
                                        {% if page_courante < total_pages %}
                                            <li class="page-item">
                                                <a class="page-link" href="{{ path('app_recherche', {q: query, page: page_courante + 1}) }}">
                                                    Suivant
                                                    <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        {% else %}
                                            <li class="page-item disabled">
                                                <span class="page-link">
                                                    Suivant
                                                    <i class="fas fa-chevron-right"></i>
                                                </span>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </nav>

                                <!-- Info pagination -->
                                <div class="text-center mt-3">
                                    <small class="text-muted">
                                        Affichage de {{ ((page_courante - 1) * limite_par_page) + 1 }} à 
                                        {{ min(page_courante * limite_par_page, total_demandes) }} 
                                        sur {{ total_demandes }} résultat{{ total_demandes > 1 ? 's' : '' }}
                                    </small>
                                </div>
                            {% endif %}
                        {% else %}
                            <!-- Affichage si aucun résultat -->
                            <div class="row justify-content-center">
                                <div class="col-lg-6 text-center">
                                    <div class="empty-state-content">
                                        <i class="fas fa-search text-muted mb-4" style="font-size: 4rem; opacity: 0.3;"></i>
                                        <h4 class="text-muted mb-3">Aucun résultat trouvé</h4>
                                        <p class="text-muted mb-4">
                                            Votre recherche "{{ query }}" n'a donné aucun résultat. 
                                            Essayez avec d'autres mots-clés ou créez une nouvelle demande.
                                        </p>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                                                <i class="fas fa-home me-2"></i>
                                                Retour à l'accueil
                                            </a>
                                            <a href="{{ path('app_demande_new') }}" class="btn btn-primary">
                                                <i class="fas fa-plus me-2"></i>
                                                Créer une demande
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </section>
                </div>

                <!-- Sidebar droite -->
                <aside class="col-lg-4" style="padding-left: 2rem;">
                    <!-- Conseils de recherche -->
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Conseils de recherche</h3>
                        <div style="padding: 1rem; background: #f8f9fa; border-radius: 8px;">
                            <ul style="margin: 0; padding-left: 1.2rem; color: #6c757d; font-size: 0.9rem;">
                                <li>Utilisez des mots-clés simples</li>
                                <li>Essayez des synonymes</li>
                                <li>Vérifiez l'orthographe</li>
                                <li>Utilisez moins de mots</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Top contributeurs -->
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Top contributeurs</h3>
                        {% if topContributeurs is defined and topContributeurs|length > 0 %}
                            {% for contributeur in topContributeurs %}
                                <div class="contributor-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div style="color: #4a5568; font-weight: 500; font-size: 0.9rem;">
                                                {% if contributeur.nom and contributeur.prenom %}
                                                    {{ contributeur.prenom }} {{ contributeur.nom }}
                                                {% else %}
                                                    {{ contributeur.email|split('@')[0] }}
                                                {% endif %}
                                            </div>
                                            <div style="color: #718096; font-size: 0.8rem;">
                                                {% if contributeur.roles is defined and 'ROLE_JOURNALISTE' in contributeur.roles %}
                                                    Journaliste
                                                {% else %}
                                                    Contributeur
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="contributor-score">
                                            {% if contributeur.nbReponses > 999 %}
                                                {{ (contributeur.nbReponses / 1000)|number_format(1) }}K
                                            {% else %}
                                                {{ contributeur.nbReponses }}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center text-muted">
                                <i class="fas fa-users mb-2" style="font-size: 2rem; opacity: 0.3;"></i>
                                <p class="mb-0">Aucun contributeur pour le moment</p>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Catégories -->
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Rechercher par catégorie</h3>
                        {% set categories = ['Politique', 'Santé', 'Économie', 'Société', 'Tech'] %}
                        {% set categoriesSlugs = ['politique', 'sante', 'economie', 'societe', 'tech'] %}
                        
                        {% for i, cat in categories %}
                            <div style="padding: 0.75rem 0; border-bottom: 1px solid #f1f5f9;">
                                <a href="{{ path('app_demandes_par_categorie', {categorie: categoriesSlugs[i]}) }}" 
                                   style="color: #4a5568; font-weight: 500; font-size: 0.9rem; text-decoration: none;">
                                    {{ cat }}
                                </a>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Statistiques -->
                    <div class="sidebar-section text-center">
                        <div style="margin-bottom: 2rem;">
                            <span class="stats-number">{{ statsGenerales.totalDemandes|number_format(0, ',', '.') }}</span>
                            <span class="stats-label">Fact-checks publiés</span>
                        </div>
                        <div>
                            <span class="stats-number">{{ statsGenerales.totalContributeursActifs|number_format(0, ',', '.') }}</span>
                            <span class="stats-label">Contributeurs actifs</span>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </main>
{% endblock %}